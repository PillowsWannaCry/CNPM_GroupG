                                    <a asp-area="" asp-page="Register"><i class="fa fa-user-plus"></i> Register</a>
                                </div>
                            </div>
                            <div class="header__top__right__auth">
                                <a asp-area="" asp-page="/Admin/Login"><i class="fa fa-user"></i> Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
