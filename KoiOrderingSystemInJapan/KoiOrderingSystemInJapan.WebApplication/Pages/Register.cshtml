@page
@model KoiOrderingSystem.WebApplication.Pages.RegisterModel

<div style="width: 400px; margin: -30px auto 0; font-family: Arial, sans-serif; border: 1px solid #ddd; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <h2 style="text-align: center; font-size: 24px; margin-bottom: 20px; color: #333;">Employee Registration</h2>
    <form method="post">
        <!-- RoleId -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.RoleId" style="display: block; font-size: 16px; margin-bottom: 5px;">Role</label>
            <select asp-for="KoiOrderEmployee.RoleId" class="form-control" asp-items="ViewBag.RoleId"
                    style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;"></select>
        </div>
        <!-- Username -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.Username" style="display: block; font-size: 16px; margin-bottom: 5px;">Username</label>
            <input asp-for="KoiOrderEmployee.Username" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;" />
            <span asp-validation-for="KoiOrderEmployee.Username" class="text-danger" style="font-size: 12px;"></span>
        </div>
        <!-- Password -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.Password" style="display: block; font-size: 16px; margin-bottom: 5px;">Password</label>
            <input asp-for="KoiOrderEmployee.Password" type="password"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;" />
            <span asp-validation-for="KoiOrderEmployee.Password" class="text-danger" style="font-size: 12px;"></span>
        </div>
        <!-- Name -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.Name" style="display: block; font-size: 16px; margin-bottom: 5px;">Full Name</label>
            <input asp-for="KoiOrderEmployee.Name"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;" />
            <span asp-validation-for="KoiOrderEmployee.Name" class="text-danger" style="font-size: 12px;"></span>
        </div>
        <!-- Phone -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.Phone" style="display: block; font-size: 16px; margin-bottom: 5px;">Phone</label>
            <input asp-for="KoiOrderEmployee.Phone"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;" />
            <span asp-validation-for="KoiOrderEmployee.Phone" class="text-danger" style="font-size: 12px;"></span>
        </div>
        <!-- Email -->
        <div style="margin-bottom: 15px;">
            <label asp-for="KoiOrderEmployee.Email" style="display: block; font-size: 16px; margin-bottom: 5px;">Email</label>
            <input asp-for="KoiOrderEmployee.Email" type="email"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;" />
            <span asp-validation-for="KoiOrderEmployee.Email" class="text-danger" style="font-size: 12px;"></span>
        </div>
        <!-- Submit Button -->
        <button type="submit" style="width: 100%; padding: 12px; background-color: #28a745; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">Register</button>
        <p style="text-align: center; margin-top: 15px; font-size: 14px; color: #555;">
            Already have an account? <a asp-page="/Index" style="color: #007BFF; text-decoration: none;">Back to Home</a>
        </p>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
